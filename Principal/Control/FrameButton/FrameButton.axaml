<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="200"
             x:Name="Base"
             xmlns:data="clr-namespace:Principal.ViewModel"
             x:Class="Principal.Control.FrameButton.FrameButton">
    <UserControl.DataContext>
        <data:FrameButtonViewModel />
    </UserControl.DataContext>

    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto">
        <Grid.Styles>
            <Style Selector="Button">
                <Setter Property="Width" Value="100" />
                <Setter Property="Margin" Value="5" />
            </Style>
        </Grid.Styles>

        <Panel Grid.Row="0"
               Grid.Column="0">
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Spacing="10">
                <Button Content="🔎 Search" Command="{Binding SearchFunc}" />
                <Button Content="🐤 Filter" />
            </StackPanel>
        </Panel>

        <Panel Grid.Row="0"
               Grid.Column="1">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="10"
                        IsVisible="{Binding !ConfirmFrameIsVisible}">
                <Button Content="🆕 Insert" Command="{Binding InsertFunc}" />
                <Button Content="🚫 Alter" Command="{Binding AlterFunc}" />
                <Button Content="🚮 Delete" Command="{Binding DeleteFunc}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="10"
                        IsVisible="{Binding ConfirmFrameIsVisible}">
                <Button Content="✅ Confirm" Command="{Binding ConfirmFunc}" />
                <Button Content="🚫 Cancel" Command="{Binding CancelFunc}" />
            </StackPanel>
        </Panel>
    </Grid>
</UserControl>