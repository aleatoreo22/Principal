<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sidePanelButton="using:Principal.Control.SidePanel.ButtonSidePanel"
             mc:Ignorable="d" d:DesignWidth="150" d:DesignHeight="450"
             x:Name="Base"
             x:Class="Principal.Control.SidePanel.SidePanel">
    <StackPanel Name="StackPanelSidePanel" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Orientation="Vertical">
        
        <sidePanelButton:ButtonSidePanel Label="🏠 Home" 
                                         Page="Home" 
                                         SideButtonClick="ButtonSidePanel_OnSideButtonClick"/>
        
        <sidePanelButton:ButtonSidePanel Label="👨 User"
                                         Page="User"
                                         SideButtonClick="ButtonSidePanel_OnSideButtonClick"/>
        
        <sidePanelButton:ButtonSidePanel Label="🎓 Student"
                                         Page="Student"
                                         SideButtonClick="ButtonSidePanel_OnSideButtonClick"/>
        
    </StackPanel>
</UserControl>
